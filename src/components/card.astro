---
const {
  href = "#",
  title = "Untitled",
  excerpt = "",
  cover = "",
  chips = [] as string[],
} = Astro.props;
---
<a href={href}
   class="group block rounded-xl overflow-hidden border border-black/5 dark:border-white/10 bg-[var(--surface)] hover:shadow-lg transition">
  {cover && (
    <img src={cover} alt={title}
         class="aspect-video w-full object-cover group-hover:opacity-95 transition" loading="lazy" />
  )}
  <div class="p-4">
    <h3 class="font-head text-lg font-semibold">{title}</h3>
    {excerpt && <p class="mt-1 text-sm text-[var(--muted)]">{excerpt}</p>}
    {chips?.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2 text-xs">
        {chips.map((c) => (
          <span class="rounded-md border px-2 py-1 border-black/10 dark:border-white/10 text-[var(--muted)]">{c}</span>
        ))}
      </div>
    )}
  </div>
</a>
