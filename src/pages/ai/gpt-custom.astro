---
// In: src/pages/ai/gpt-custom.astro
import { sanityClient } from "../../lib/sanity";
import SiteLayout from "@core/layouts/SiteLayout.astro";
import { Image } from "astro:assets";

function getSanityImageUrl(sanityImage: any) {
  if (!sanityImage || !sanityImage.asset) return null;
  const ref = sanityImage.asset._ref;
  const [_type, assetId, dimensions, format] = ref.split('-');
  return `https://cdn.sanity.io/images/1avzsmsi/production/${assetId}-${dimensions}.${format}`;
}

const query = '*[_type == "aiSolution" && solutionType == "gpt" && defined(slug.current)] | order(_createdAt desc)';
const solutions = await sanityClient.fetch(query);

const description = "Custom GPT addestrati su workflow e dati proprietari per automatizzare il lavoro dei team.";
const SITE = "https://copycodeai-bki.pages.dev";
const url = `${SITE}/ai/gpt-custom`;
---

<SiteLayout title="Custom GPT" description={description} url={url}>
  <div class="container mx-auto px-4 py-12">
    <header class="mb-10">
      <h1 class="text-4xl font-bold">Custom GPT models</h1>
      <p class="mt-2 max-w-2xl text-lg text-[var(--muted)]">
        {description}
      </p>
    </header>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        solutions.map((solution, index) => {
          const imageUrl = getSanityImageUrl(solution.mainImage);
          return (
            <a
              href={`/ai/solutions/${solution.slug.current}`}
              class="group block overflow-hidden rounded-lg border border-black/5 bg-[var(--surface)] shadow-sm transition hover:shadow-lg dark:border-white/10"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              {imageUrl && (
                <div class="relative h-48 overflow-hidden">
                  <Image
                    src={imageUrl}
                    alt={`Image for ${solution.title}`}
                    width={600}
                    height={400}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
              )}
              <div class="p-6">
                <h2 class="text-xl font-semibold text-[var(--text)]">{solution.title}</h2>
                <p class="mt-2 text-sm text-[var(--muted)]">{solution.summary}</p>
              </div>
            </a>
          );
        })
      }
    </div>
  </div>
</SiteLayout>
